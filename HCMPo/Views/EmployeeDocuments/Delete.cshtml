@model HCMPo.Models.EmployeeDocument

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            <h4>Employee: @Model.Employee.FullName</h4>
            <hr />
            
            <div class="alert alert-warning">
                <h5>Are you sure you want to delete this document?</h5>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Document Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Document Type</dt>
                        <dd class="col-sm-8">@Model.DocumentType</dd>

                        <dt class="col-sm-4">File Name</dt>
                        <dd class="col-sm-8">@Model.FileName</dd>

                        <dt class="col-sm-4">Upload Date</dt>
                        <dd class="col-sm-8">@Model.UploadDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Uploaded By</dt>
                        <dd class="col-sm-8">@Model.UploadedBy</dd>

                        <dt class="col-sm-4">Expiry Date</dt>
                        <dd class="col-sm-8">@(Model.ExpiryDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmployeeId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" asp-route-employeeId="@Model.EmployeeId" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div> 