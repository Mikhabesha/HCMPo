@model HCMPo.Models.TaxSetting
@using HCMPo.Models

@{
    ViewData["Title"] = "Edit Tax Setting";
}

<h2>Edit Tax Setting</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Type" class="form-label"></label>
                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<TaxType>()" id="Type"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Percentage" class="form-label"></label>
                    <input asp-for="Percentage" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Percentage" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 other-tax-fields" style="display:none;">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row income-tax-fields" style="display:none;">
                <div class="col-md-4 mb-3">
                    <label asp-for="MinSalary" class="form-label"></label>
                    <input asp-for="MinSalary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MinSalary" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="MaxSalary" class="form-label"></label>
                    <input asp-for="MaxSalary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MaxSalary" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Subtraction" class="form-label"></label>
                    <input asp-for="Subtraction" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Subtraction" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="IsActive" class="form-label"></label>
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            function toggleIncomeTaxFields() {
                var type = document.getElementById('Type').value;
                var showIncome = type == '0'; // 0 = IncomeTax
                var showOther = type == '2'; // 2 = Other
                document.querySelectorAll('.income-tax-fields').forEach(function(div) {
                    div.style.display = showIncome ? 'block' : 'none';
                });
                document.querySelectorAll('.other-tax-fields').forEach(function(div) {
                    div.style.display = showOther ? 'block' : 'none';
                });
            }
            document.getElementById('Type').addEventListener('change', toggleIncomeTaxFields);
            toggleIncomeTaxFields();
        });
    </script>
} 