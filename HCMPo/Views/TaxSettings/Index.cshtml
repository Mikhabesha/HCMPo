@model IEnumerable<HCMPo.Models.TaxSetting>
@using HCMPo.Models

@{
    ViewData["Title"] = "Tax Settings";
}

<h2>Tax Settings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>Min Salary</th>
            <th>Max Salary</th>
            <th>@Html.DisplayNameFor(model => model.Percentage)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Type</td>
                <td>@(item.Type == TaxType.IncomeTax ? item.MinSalary?.ToString("N2") : "-")</td>
                <td>@(item.Type == TaxType.IncomeTax ? item.MaxSalary?.ToString("N2") : "-")</td>
                <td>@item.Percentage %</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 