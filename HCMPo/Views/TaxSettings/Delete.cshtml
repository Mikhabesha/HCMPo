@model HCMPo.Models.TaxSetting
@using HCMPo.Models

@{
    ViewData["Title"] = "Delete Tax Setting";
}

<h2>Delete Tax Setting</h2>

<div class="card">
    <div class="card-body">
        <h3>Are you sure you want to delete this tax setting?</h3>
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
            <dd class="col-sm-10">@Model.Type</dd>

            <dt class="col-sm-2">Min Salary</dt>
            <dd class="col-sm-10">@(Model.Type == TaxType.IncomeTax ? Model.MinSalary?.ToString("N2") : "-")</dd>

            <dt class="col-sm-2">Max Salary</dt>
            <dd class="col-sm-10">@(Model.Type == TaxType.IncomeTax ? Model.MaxSalary?.ToString("N2") : "-")</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Percentage)</dt>
            <dd class="col-sm-10">@Model.Percentage %</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 