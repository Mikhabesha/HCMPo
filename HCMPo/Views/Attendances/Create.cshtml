@model HCMPo.Models.Attendance
@using HCMPo.Models // For AttendanceStatus enum

@{
    ViewData["Title"] = "Manual Attendance Entry";
}

<h1>@ViewData["Title"]</h1>

<h4>Add New Attendance Record</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label">Employee</label>
                <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                    <option value="">-- Select Employee --</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="CheckInTime" class="form-label"></label>
                    <input asp-for="CheckInTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CheckOutTime" class="form-label"></label>
                    <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<AttendanceStatus>()">
                         <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                 <div class="col-md-6">
                    <label asp-for="StatusReason" class="form-label">Status Reason (Optional)</label>
                    <input asp-for="StatusReason" class="form-control" />
                    <span asp-validation-for="StatusReason" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ManualEntryReason" class="form-label">Reason for Manual Entry</label>
                <textarea asp-for="ManualEntryReason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ManualEntryReason" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create Record" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
