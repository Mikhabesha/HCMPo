@model IEnumerable<HCMPo.Models.ZKTimeAttendance>

@{
    ViewData["Title"] = "Raw Attendance Data";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Processed Data
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>Check Time</th>
                            <th>Check Type</th>
                            <th>Verify Mode</th>
                            <th>Work Code</th>
                            <th>Device ID</th>
                            <th>Device Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserId</td>
                                <td>@item.UserName</td>
                                <td>@item.CheckTime.ToString("g")</td>
                                <td>@item.CheckType</td>
                                <td>@item.VerifyMode</td>
                                <td>@item.WorkCode</td>
                                <td>@item.DeviceId</td>
                                <td>@item.DeviceName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 